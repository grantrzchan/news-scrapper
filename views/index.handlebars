<div class="jumbotron text-center">
    <div class="overlay">
    </div>
    <div class="background-image">
    </div>
    <div class="caption">
        <img id="onion-header" height="85px" width ="640px" src="https://upload.wikimedia.org/wikipedia/en/thumb/8/8d/The_Onion.svg/1280px-The_Onion.svg.png" alt="the Onion"/>
        <h1>Scrapper</h1>
        <h4>Your #1 Source for the World's Most Trusted Fake News</h4>
    </div>
</div>
{{!-- div for all articles; articles take all 12 columns --}}
<div class="container article-container">
    {{#each scraper}}{{#unless this.isSaved}}
    <div class="panel panel-default" data-_id={{this._id}}>
        <div class="panel-heading">
            <h3>
                <a class="article-link" href={{this.url}}>{{this.title}}</a>
            </h3>
            <button class="btn btn-success save">Save Article</button>
        </div>
        <div class="panel-body">
            <p>{{this.note}}</p>
        </div>
    </div>
    {{/unless}}{{/each}}
</div>